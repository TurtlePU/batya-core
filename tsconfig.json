{
    "compilerOptions": {
        "module": "commonJS",
        "target": "ES2015",
        "declaration": true,
        "outDir": "dist",
        "baseUrl": "src",
        "strict": true,
        "plugins": [
            { "transform": "@zerollup/ts-transform-paths" }
        ],
        "lib": [
            "ES2019"
        ],
        "experimentalDecorators": true,
        "esModuleInterop": true
    },
    "include": [ "src/**/*" ]
}